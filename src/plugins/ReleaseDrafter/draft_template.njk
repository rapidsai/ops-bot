{% macro prEntry(pr) %}
- {{ pr.title | sanitizeTitle }} (#{{ pr.number }}) @{{ pr.user.login }}
{%- endmacro %}
# {{ releaseTitle }}

{% if hasEntries %}
  {% for _, category in categories %}
    {% if category.prs | length %}
## {{ category.title }}

    {% for pr in category.prs %}
{{ prEntry(pr) }}
    {% endfor %}

    {% endif %}
  {% endfor %}

  {% if breaking | length %}
## Breaking Changes

    {% for pr in breaking %}
{{ prEntry(pr) }}
    {% endfor %}
  {% endif -%}
{% else %}
  There are no changes for v0.{{ versionNumber }}.0 yet.
{% endif -%}
